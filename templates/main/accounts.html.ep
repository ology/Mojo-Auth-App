%= tag h1 => 'Accounts'
%= include 'main/_flash'
New user:
%= form_for add => (method => 'post') => begin
    %= include 'main/_credentials'
    %= submit_button 'Add'
%= end
% if ($accounts) {
%   while (my $account = $accounts->next) {
    <a href="<%= url_for('remove')->query(user => $account->name) %>">x</a>
    <%= $account->id %>: <%= $account->name %> - <%= $account->created %>
    %= tag 'br'
%   }
% }
%= tag 'p'
%= link_to Logout => 'logout'

